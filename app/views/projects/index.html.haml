.row
  .col-sm-6
    %h1
      Proyectos

  .col-sm-6.text-right
    - if policy(:project).new?
      %h1
        = link_to "Agregar proyecto", new_polymorphic_path([@projectable, :project ]), class: 'btn btn-default'

= render "empty_msg"

- @projectable.projects.each do |project|
  .row
    .col-md-4
      .thumbnail 
        = image_tag project.photo_project
        .caption
          %h3= truncate(project.name, length: 20)
          %p= truncate(project.description, length: 30)
          %p
            %a.btn.btn-default{href: polymorphic_path([project.projectable, project]), role: "button"}= I18n.t('project.index.show')
            %a.btn.btn-default{href: edit_polymorphic_path([project.projectable, project]), role: "button"} Editar
