%h1.section= t('form.sign_up.title')

= simple_form_for(resource, as: resource_name, url: registration_path) do |f|
  = f.error_notification

  .form-inputs
    = f.input :email, required: true, autofocus: true
    = f.input :password, required: true
    = f.input :password_confirmation, required: true
    = f.input :role, collection: [["Colaborador: Me interesa colaborar con proyectos sociales", :collaborator],
      ["OrganizaciÃ³n: Trabajo en un proyecto", :organization],
      ["Inversionista: Soy inversionista social", :investor]], required: true, :value_method => :second

  .form-actions.text-right
    = f.button :submit, t('form.sign_up.submit')

