.thumbs
  .container
    %h3.title= title

    .row
      - projects.each do |p|
        = link_to polymorphic_url([p.projectable, p]) do
          .col-md-3.col-xs-6.thumb
            - if p.photo_project.blank?
              = image_tag p.photo_project.mid.url, class: 'logo img-responsive center-block thumb__placeholder'
            - else
              = image_tag p.photo_project.mid.url, class: 'logo img-responsive center-block'
            %h4.label_thumb= p.name
